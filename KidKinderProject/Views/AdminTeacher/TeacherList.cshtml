@model List<KidKinderProject.Entities.Teacher>
@{
    ViewBag.Title = "TeacherList";
    TempData["Text1"] = "Öğretmen Listesi";
    TempData["Text2"] = "Yeni Öğretmen Girişi";
    TempData["Url1"] = "/AdminTeacher/TeacherList/";
    TempData["Url2"] = "/AdminTeacher/CreateTeacher/";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h5>Öğretmen Listesi</h5>
        <span>Öğretmenlerimizle ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Öğretmen Adı</th>
                        <th>Alanı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="@item.ImageUrl" class="img-thumbnail rounded-pill mr-3" style="width:75px; height:75px;" />@item.Name</td>
                            <td>@item.Branch.BranchName</td>
                            <td><a href="/AdminTeacher/RemoveTeacher/@item.TeacherId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AdminTeacher/UpdateTeacher/@item.TeacherId" class="btn btn-outline-success">Güncelle</a></td>
                            <td><button type="button" data-toggle="modal" data-target="#Modal1-@item.TeacherId" class="btn btn-outline-dark">Detaylar</button></td>
                        </tr>
                        <div class="modal" id="Modal1-@item.TeacherId" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title"><img src="@item.ImageUrl" class="img-thumbnail rounded-pill mr-3" style="width:75px; height:75px;" /> @item.Name</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>@item.Branch.BranchName</p>
                                        <p><strong>Twitter: </strong>@item.TwitterUrl</p>
                                        <p><strong>Facebook: </strong>@item.FacebookUrl</p>
                                        <p><strong>Linkedin: </strong>@item.LinkedinUrl</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
            <a href="/AdminTeacher/CreateTeacher/" class="btn btn-outline-primary">Yeni Öğretmen Girişi</a>
        </div>
    </div>
</div>