@model KidKinderProject.Entities.MailSubscribe
@{
    ViewBag.Title = "UpdateMailSubscribe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Mail Bülteni Güncelleme Sayfası</h5>
    </div>
    <div class="card-block">
        <form class="form-material" method="post">
            <input type="hidden" value="@Model.MailSubscribeId" name="MailSubscribeId" />
            <span class="text-danger">
            </span>
            <div class="form-group form-default">
                <input type="text" name="NameSurname" placeholder="Adınız Soyadınız" value="@Model.NameSurname" class="form-control">
                <span class="form-bar"></span>
            </div>
            <div class="form-group form-default">
                <input type="text" name="Email" placeholder="Mail Adresiniz" value="@Model.Email" class="form-control">
                <span class="form-bar"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary">Güncelle</button>
        </form>
    </div>
</div>