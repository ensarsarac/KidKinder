@model List<KidKinderProject.Entities.BookASeat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h5>Rezervasyon Listesi</h5>
        <span>Rezervasyon ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Sınıf</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.ClassroomId</td>
                            <td><a href="/AdminBookASeat/RemoveBookASeat/@item.BookASeatId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AdminBookASeat/UpdateBookASeat/@item.BookASeatId" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>

                    }
                </tbody>
            </table>
            <a href="/AdminBookASeat/CreateBookASeat/" class="btn btn-outline-primary">Yeni Rezervasyon Girişi</a>
        </div>
    </div>
</div>