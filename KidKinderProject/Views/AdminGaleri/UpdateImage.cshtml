@model KidKinderProject.Entities.Gallery

@{
    ViewBag.Title = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Resim Güncelleme Sayfası</h5>
    </div>
    <div class="card-block">
        <form class="form-material" method="post">
            <input type="hidden" value="@Model.GalleryId" name="GalleryId" />
            <div class="form-group form-default">
                <input type="text" name="Path" placeholder="Resim Yolu" value="@Model.Path"  class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-primary">Resmi Güncelle</button>
        </form>
    </div>
</div>