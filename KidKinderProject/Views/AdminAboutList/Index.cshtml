@model List<KidKinderProject.Entities.AboutList>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h5>Hakkımızda Maddeler Listesi</h5>
        <span>Maddeler ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
        <span><b>Not: </b>Tema bütünlüğü sağlanması için sadece 3 madde ekleyiniz.</span>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Maddeler</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Description</td>
                            <td><a href="/AdminAboutList/RemoveAboutList/@item.AboutListId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AdminAboutList/UpdateAboutList/@item.AboutListId" class="btn btn-outline-success">Güncelle</a></td>                            
                        </tr>
                        
                    }
                </tbody>
            </table>
            <a href="/AdminAboutList/CreateAboutList/" class="btn btn-outline-primary">Yeni Madde Ekle</a>
        </div>
    </div>
</div>
