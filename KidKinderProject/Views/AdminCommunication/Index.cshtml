@model KidKinderProject.Entities.Communication
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="card">
    <div class="card-header">
        <h5>İletişim Bilgileri</h5>
        <span>İletişim ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
        <span><b>Not: </b>Tema bütünlüğü sağlanması için sadece güncelleme işlemi yapılabilmektedir..</span>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Adres</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Açıklama</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@count</th>
                        <td>@Model.Address</td>
                        <td>@Model.PhoneNumber</td>
                        <td>@Model.Email</td>
                        <td>@Model.Description</td>
                        <td><a href="/AdminCommunication/UpdateCommunication/@Model.CommunicationId" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
</div>