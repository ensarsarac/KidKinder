

@model KidKinderProject.Entities.MailSubscribe

<div class="col-lg-3 col-md-6 mb-5">
    <h3 class="text-primary mb-4">Mail Bülteni</h3>
    <form action="/UILayout/MailSubscribe/" method="post">
        <div class="form-group">
            <input type="text"
                   class="form-control border-0 py-4"
                   placeholder="Adınız"
                   name="NameSurname"
                   required="required" />
        </div>
        <div class="form-group">
            <input type="email"
                   class="form-control border-0 py-4"
                   placeholder="Mailiniz"
                   name="Email"
                   required="required" />
        </div>
        <div>
            <button class="btn btn-primary btn-block border-0 py-3"
                    type="submit">
                Hemen Abone Ol
            </button>
        </div>
    </form>
</div>