@model KidKinderProject.Entities.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Sosyal Medya Bilgileri</h5>
                <span>Sosyal Medya ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <input type="hidden" value="@Model.SocialMediaId" name="SocialMediaId" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Platform</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Platform" value="@Model.Platform" placeholder="Platform">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ikon</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Icon" value="@Model.Icon" placeholder="Platform Ikonu">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Url</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Url" value="@Model.Url" placeholder="Url">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-primary">Sosyal Medya Hesabını Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>